modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Admin User"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Production"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Server"

[[workflows.workflow]]
name = "Create Admin User"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/create-admin.ts"

[[workflows.workflow]]
name = "Production Build"
author = 37208979
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build && npm start"

[[workflows.workflow]]
name = "Build Production"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production next build"

[[workflows.workflow]]
name = "Production Deployment"
author = 37208979
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production node deployment-check.js && NODE_ENV=production npm run build && npm start"

[[workflows.workflow]]
name = "Fixed Production Deployment"
author = 37208979
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production node deployment-check.js && NODE_ENV=production npm run build && NODE_ENV=production node startup.js"

[[workflows.workflow]]
name = "Fixed Deployment Build"
author = 37208979
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export NODE_ENV=production && node deployment-check.js && npm run build && node startup.js"

[[workflows.workflow]]
name = "Deployment Build"
author = 37208979
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production PORT=3000 node deployment-check.js && npm run build && NODE_ENV=production PORT=3000 node startup.js"

[[workflows.workflow]]
name = "Fixed Production Build"
author = 37208979
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export NODE_ENV=production && npm run build && NODE_ENV=production PORT=5000 node startup.js"

[[workflows.workflow]]
name = "Next.js Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "next dev -p 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Production Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 NODE_ENV=production FORCE_OPENAI_ASSISTANT=true node simple-production-server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "NODE_ENV=production node startup.js"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
